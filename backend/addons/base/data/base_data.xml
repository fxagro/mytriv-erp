<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Base data for MyTriv ERP -->

    <!-- Default company -->
    <record id="main_company" model="res.company">
        <field name="name">MyTriv ERP</field>
        <field name="email">info@mytriv-erp.com</field>
        <field name="website">https://mytriv-erp.com</field>
        <field name="vat">ID123456789</field>
        <field name="country_id" ref="base.id"/>
    </record>

    <!-- Default currency (Indonesian Rupiah) -->
    <record id="IDR" model="res.currency">
        <field name="name">IDR</field>
        <field name="symbol">Rp</field>
        <field name="code">IDR</field>
        <field name="rate">1.0</field>
        <field name="position">before</field>
    </record>

    <!-- Default currency (USD) -->
    <record id="USD" model="res.currency">
        <field name="name">USD</field>
        <field name="symbol">$</field>
        <field name="code">USD</field>
        <field name="rate">15000.0</field>
        <field name="position">before</field>
    </record>

    <!-- Indonesia country -->
    <record id="id" model="res.country">
        <field name="name">Indonesia</field>
        <field name="code">ID</field>
    </record>

    <!-- Default admin user -->
    <record id="base.user_admin" model="res.users">
        <field name="name">Administrator</field>
        <field name="login">admin</field>
        <field name="password">admin</field>
        <field name="email">admin@mytriv-erp.com</field>
        <field name="company_id" ref="main_company"/>
        <field name="company_ids" eval="[(4, ref('main_company'))]"/>
    </record>

    <!-- User groups -->
    <record id="group_user" model="res.groups">
        <field name="name">Employee</field>
        <field name="comment">Standard employee group</field>
    </record>

    <record id="group_system" model="res.groups">
        <field name="name">System Administrator</field>
        <field name="comment">System administrator group with full access</field>
    </record>

    <!-- Configuration parameters -->
    <record id="config_web_base_url" model="ir.config_parameter">
        <field name="key">web.base.url</field>
        <field name="value">http://localhost:8069</field>
    </record>

    <record id="config_db_name" model="ir.config_parameter">
        <field name="key">db_name</field>
        <field name="value">mytriv_erp</field>
    </record>

</odoo>