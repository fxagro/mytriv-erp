<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sale data for MyTriv ERP -->

    <!-- Product categories -->
    <record id="category_all" model="product.category">
        <field name="name">All</field>
        <field name="company_id" ref="base.main_company"/>
    </record>

    <record id="category_services" model="product.category">
        <field name="name">Services</field>
        <field name="parent_id" ref="category_all"/>
        <field name="company_id" ref="base.main_company"/>
    </record>

    <record id="category_consumables" model="product.category">
        <field name="name">Consumables</field>
        <field name="parent_id" ref="category_all"/>
        <field name="company_id" ref="base.main_company"/>
    </record>

    <!-- Sample products -->
    <record id="product_service_consulting" model="product.product">
        <field name="name">Consulting Service</field>
        <field name="type">service</field>
        <field name="categ_id" ref="category_services"/>
        <field name="list_price">100.00</field>
        <field name="standard_price">50.00</field>
        <field name="company_id" ref="base.main_company"/>
    </record>

    <record id="product_office_supplies" model="product.product">
        <field name="name">Office Supplies</field>
        <field name="type">consu</field>
        <field name="categ_id" ref="category_consumables"/>
        <field name="list_price">25.00</field>
        <field name="standard_price">15.00</field>
        <field name="company_id" ref="base.main_company"/>
    </record>

    <!-- Units of measure -->
    <record id="uom_unit" model="uom.uom">
        <field name="name">Unit(s)</field>
        <field name="category_id" ref="product_uom_categ_unit"/>
        <field name="factor">1</field>
        <field name="uom_type">reference</field>
    </record>

    <record id="uom_hour" model="uom.uom">
        <field name="name">Hour(s)</field>
        <field name="category_id" ref="product_uom_categ_unit"/>
        <field name="factor">1</field>
        <field name="uom_type">reference</field>
    </record>

    <!-- UoM Categories -->
    <record id="product_uom_categ_unit" model="uom.category">
        <field name="name">Unit</field>
    </record>

    <!-- Payment terms -->
    <record id="payment_term_immediate" model="account.payment.term">
        <field name="name">Immediate Payment</field>
    </record>

    <record id="payment_term_15_days" model="account.payment.term">
        <field name="name">15 Days</field>
    </record>

    <record id="payment_term_30_days" model="account.payment.term">
        <field name="name">30 Days</field>
    </record>

    <!-- Taxes -->
    <record id="tax_vat_10" model="account.tax">
        <field name="name">VAT 10%</field>
        <field name="amount">10</field>
        <field name="type_tax_use">sale</field>
    </record>

    <!-- Journals -->
    <record id="journal_sale" model="account.journal">
        <field name="name">Sales Journal</field>
        <field name="code">SALE</field>
        <field name="type">sale</field>
    </record>

    <record id="journal_bank" model="account.journal">
        <field name="name">Bank Journal</field>
        <field name="code">BANK</field>
        <field name="type">bank</field>
    </record>

</odoo>